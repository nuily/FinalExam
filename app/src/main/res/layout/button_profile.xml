<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/prof_btn_row_margin">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="@dimen/button_profile_width"
        android:layout_height="@dimen/button_profile_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mood_black_24dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/profile_btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:maxLines="1"/>

</LinearLayout>