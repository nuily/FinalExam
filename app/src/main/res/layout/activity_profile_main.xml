<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="@dimen/profile_img_width"
        android:layout_height="@dimen/profile_img_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/profile_img_pad"
        android:src="@drawable/ic_mood_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <include
            android:id="@+id/btn1"
            layout="@layout/button_profile" />

        <include
            android:id="@+id/btn2"
            layout="@layout/button_profile" />

        <include
            android:id="@+id/btn3"
            layout="@layout/button_profile" />

        <include
            android:id="@+id/btn4"
            layout="@layout/button_profile" />

    </LinearLayout>
</LinearLayout>